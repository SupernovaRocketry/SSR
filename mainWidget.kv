#:kivy 1.11.1

<MainWidget>:
    FloatLayout:
        canvas:

            # Ambiente superior
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
            Color:
                rgb: .9, .9, .9
            Rectangle:
                size: int(self.parent.width), int(self.parent.height)*0.90
                pos: 0,0
            Color:
                rgb: .9, 0, 0
            Line:
