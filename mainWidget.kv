                    text: 'SETOR ELETRÔNICA'
                    size_font: 32
                Label:
                    id: data
                    text: '29/05/2021'
                    size_font: 14

        # Dados foguete
        BoxLayout:
            orientation:'vertical'
            size_hint: .25, .82
            pos_hint: {'x': 0.025, 'y': 0.05}
            valign: 'top'
            halign: 'left'
            BoxLayout:
