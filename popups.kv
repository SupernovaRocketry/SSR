#:kivy 1.11.1

<ConnectSocketPopup>:
    title: 'Conex√£o Socket'
    size_hint_y: 0.3
    size_hint_x: 0.2
    # height: 200
    BoxLayout:
        id: layout
        orientation:'vertical'
        GridLayout:
            size: int(self.parent.width),  int(self.parent.height)*0.8
            cols: 2
            rows: 4
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: txt_ip
                text: '127.0.0.1'
                font_size: 14
                halign: 'center'
                valign: 'middle'
            Label:
                text: "Port"
                font_size: 14
            TextInput:
                id: txt_port
                text: '502'
                font_size: 14
                halign: 'center'
                valign: 'middle'
            Label:
                text: "Login"
                font_size: 14
            TextInput:
                id: txt_login
                text: 'login'
                font_size: 14
                halign: 'center'
                valign: 'middle'
            Label:
                text: "Senha"
                font_size: 14
            TextInput:
                id: txt_senha
                text: 'senha'
                font_size: 14
                halign: 'center'
                valign: 'middle'
        BoxLayout:
            orientation:'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: 'Conectar'
                on_release:
                    app.root._login = txt_login.text
                    app.root._senha = txt_senha.text
                    app.root._serverIP = txt_ip.text
                    app.root._port = int(txt_port.text)
                    app.root.startDataRead(str(txt_ip.text), int(txt_port.text))
            Button:
                size_hint_y: None
                height: 40
                text:'Fechar'
                on_release: root.dismiss()




