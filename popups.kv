#:kivy 1.11.1

<ConnectSocketPopup>:
    title: 'Conex√£o Socket'
    size_hint_y: None
    size_hint_: 0.4
    height: 200
    BoxLayout:
        id: layout
        orientation:'vertical'
        GridLayout:
            cols: 2
            rows: 4
            Label:
                text: "IP"
                font_size: 14
            TextInput:
                id: txt_ip
                text: '127.0.0.1'
                font_size: 14
                halign: 'center'
                valign: 'middle'
            Label:
                text: "Port"
                font_size: 14
            TextInput:
                id: txt_port
                text: '502'
                font_size: 14
                halign: 'center'
                valign: 'middle'
            Label:
                text: "Login"
                font_size: 14
            TextInput:
                id: txt_senha
                text: 'login'
                font_size: 14
                halign: 'center'
                valign: 'middle'
            Label:
                text: "Senha"
                font_size: 14
            TextInput:
                id: txt_senha
                text: 'senha'
                font_size: 14
                halign: 'center'
                valign: 'middle'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    size_hint_y: None
                    height: 40
                    text: 'Conectar'
                Button:
                    size_hint_y: None
                    height: 40
                    text:'fechar'
                    on_release: root.dismiss()




